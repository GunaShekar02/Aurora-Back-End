  "author": "Guna Shekar <gunashekherproddatoori@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint --fix \"**/*.js\"",
    "lint:ci": "yarn eslint \"**/*.js\""
  },
  "dependencies": {
    "@google-cloud/storage": "^4.2.0",
    "apollo-server-express": "^2.9.5",
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.2",
    "nodemailer": "^6.3.1",
    "razorpay": "^2.0.5",
    "saslprep": "^1.0.3",
    "sharp": "^0.23.4",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-underscore-dangle": 0
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
